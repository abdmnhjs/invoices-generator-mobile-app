generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id        String   @id @default(uuid())
  companyName String
  email       String
  address     String
  SIRET        Int
  TVA Decimal @db.Decimal(4,2)
  DateOfIssue DateTime
  DueDate DateTime
  ProductName String
  Quantity Int
  PricePerUnit Decimal @db.Decimal(4,2)
  TotalPrice Decimal @db.Decimal(4,2)
  CustomerName String
}